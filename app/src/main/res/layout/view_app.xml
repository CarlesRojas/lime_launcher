<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:contentDescription="@string/app_icon_description"
        android:src="@mipmap/main_icon" />

    <LinearLayout
        android:id="@+id/notificationBadgeGrid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:ignore="UseCompoundDrawables">

        <LinearLayout
            android:id="@+id/notificationBadgeGridMarker"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_rounded_green"
            android:gravity="center"
            tools:ignore="UseCompoundDrawables,UselessParent">

            <TextView
                android:id="@+id/notificationBadgeGridNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:singleLine="true"
                android:text="4"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="19sp" />

    <LinearLayout
        android:id="@+id/notificationBadgeList"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:ignore="UseCompoundDrawables">

        <LinearLayout
            android:id="@+id/notificationBadgeListMarker"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_rounded_green"
            android:gravity="center"
            tools:ignore="UseCompoundDrawables,UselessParent">

            <TextView
                android:id="@+id/notificationBadgeListNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:singleLine="true"
                android:text="4"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>